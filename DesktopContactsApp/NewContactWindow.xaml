<Window x:Class="DesktopContactsApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="300" Width="300">
    <StackPanel Margin="10" >
        <TextBox  Margin="5" x:Name="nameTextBox"/>
        <TextBox  Margin="5" x:Name="phoneTextBox"/>
        <TextBox  Margin="5" x:Name="emailTextBox"/>


        <Button Content="Save" x:Name="saveButton" Click="SaveButton_Click"/>
    </StackPanel>
</Window>
